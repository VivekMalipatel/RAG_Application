# Development Dockerfile with additional tools
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install system dependencies including development tools
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies with development packages
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
        jupyter \
        ipython \
        pytest \
        black \
        flake8 \
        mypy

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Create a non-root user for security but keep sudo access for development
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app

# Switch to app user
USER app

# Expose ports
EXPOSE 8000 8888

# Default command for development
CMD ["python", "pretests/semantic_store_langgraph.py"]
